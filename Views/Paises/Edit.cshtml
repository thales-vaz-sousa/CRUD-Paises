@model desafio_paises.Models.Pais

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>País</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Populacao" class="control-label">População</label>
                <input asp-for="Populacao" class="form-control"/>
                <span asp-validation-for="Populacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ddi" class="control-label">DDI</label>
                <input asp-for="Ddi" class="form-control"/>
                <span asp-validation-for="Ddi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AreaTotal" class="control-label"> Área Total (km²)</label>
                <input asp-for="AreaTotal" class="form-control"/>
                <span asp-validation-for="AreaTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sigla" class="control-label"></label>
                <input asp-for="Sigla" class="form-control"/>
                <span asp-validation-for="Sigla" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idioma" class="control-label"></label>
                <input asp-for="Idioma" class="form-control"/>
                <span asp-validation-for="Idioma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Continente" class="control-label"></label>
                <input asp-for="Continente" class="form-control"/>
                <span asp-validation-for="Continente" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PaisOnu"/> @Html.DisplayNameFor(model => model.PaisOnu)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Fundacao" class="control-label"> Fundação</label>
                <input asp-for="Fundacao" class="form-control" type="date"/>
                <span asp-validation-for="Fundacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
