@model desafio_paises.Models.Pais

@{
    ViewData["Title"] = "Editar";
}

<h1 style="text-align: center">Editar</h1>
<div class="container">
    <h4>País</h4>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group row mb-3">
            <label asp-for="Nome" class="col-sm-2 col-form-label font-weight-bold"></label>
            <div class="col-sm-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Populacao" class="col-sm-2 col-form-label font-weight-bold">População</label>
            <div class="col-sm-10">
                <input asp-for="Populacao" class="form-control" />
                <span asp-validation-for="Populacao" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Ddi" class="col-sm-2 col-form-label font-weight-bold">DDI</label>
            <div class="col-sm-10">
                <input asp-for="Ddi" class="form-control" />
                <span asp-validation-for="Ddi" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="AreaTotal" class="col-sm-2 col-form-label font-weight-bold">Área Total (km²)</label>
            <div class="col-sm-10">
                <input asp-for="AreaTotal" class="form-control" />
                <span asp-validation-for="AreaTotal" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Sigla" class="col-sm-2 col-form-label font-weight-bold"></label>
            <div class="col-sm-10">
                <input asp-for="Sigla" class="form-control" />
                <span asp-validation-for="Sigla" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Idioma" class="col-sm-2 col-form-label font-weight-bold"></label>
            <div class="col-sm-10">
                <input asp-for="Idioma" class="form-control" />
                <span asp-validation-for="Idioma" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Continente" class="col-sm-2 col-form-label font-weight-bold"></label>
            <div class="col-sm-10">
                <input asp-for="Continente" class="form-control" />
                <span asp-validation-for="Continente" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-2 col-form-label font-weight-bold">ONU</label>
            <div class="col-sm-10 d-flex align-items-center">
                <input class="form-check-input mt-0" asp-for="PaisOnu" />
                <span class="ms-2 text-muted">Membro da ONU</span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Fundacao" class="col-sm-2 col-form-label font-weight-bold">Fundação</label>
            <div class="col-sm-10">
                <input asp-for="Fundacao" class="form-control" type="date" />
                <span asp-validation-for="Fundacao" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mt-4">
            <div class="col-sm-10 offset-sm-2">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Voltar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
