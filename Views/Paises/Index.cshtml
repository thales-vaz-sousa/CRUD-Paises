@model IEnumerable<desafio_paises.Models.Pais>

@{
    ViewData["Title"] = "Listagem";
}

<h1>Listagem</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
</p>

<form asp-controller="Paises" asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="SearchString" class="form-control" placeholder="Buscar por nome ou continente..." />
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Buscar
        </button>
        <a asp-action="Index" class="btn btn-secondary">Limpar</a>
    </div>
</form>
@if (!Model.Any()) {
    <div class="alert alert-warning">Nenhum país/continente encontrado com esse nome.</div>
}

<table class="table table-hover table-striped shadow-sm">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                População
            </th>
            <th>
                DDI
            </th>
            <th>
                Área Total (km²)
            </th>
            <th>
                Sigla
            </th>
            <th>
                Idioma
            </th>
            <th>
                Continente
            </th>
            <th>
                ONU
            </th>
            <th>
                Fundação
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Populacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ddi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sigla)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idioma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Continente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaisOnu)
            </td>
            <td>
                @item.Fundacao.ToString("dd/MM/yyyy")
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
